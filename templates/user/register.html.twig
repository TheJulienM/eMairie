{% extends 'base.html.twig' %}

{% block body %}
    <!-- ======= Header ======= -->
    <header id="header">
        <div class="container">

            <div id="logo" class="pull-left">
                <!-- Uncomment below if you prefer to use a text logo -->
                <!-- <h1><a href="#intro">The<span>Event</span></a></h1>-->
                <a href={{ path('accueil') }} class="scrollto"><img src="/assets/img/emairie_logo.png" alt="" title=""></a>
            </div>

            <nav id="nav-menu-container">
                <ul class="nav-menu">
                    <li><a href="{{ path('accueil') }}">Retour</a></li>
                </ul>
            </nav><!-- #nav-menu-container -->
        </div>

    </header><!-- End Header -->

    <!--======= Intro Section =======-->
    <section id="contact" class="section-bg contact_login">

        <div class="container" data-aos="zoom-in">

            <div class="section-header"></div>
            <div class="section-header">
                <h2 style="color: white;">Connexion Habitants</h2>
                <p><a href="{{ path('login') }}">Déjà un compte ?</a></p>
                <!--<p><a href="#">Mot de passe oublié</a></p>-->
            </div>


            {{ form_start(formregister, {'attr' : {'class' : ''}}) }}

            <div class="form-row">
                <div class="form-group col-md-4">
                    <!--<input type="email" class="form-control" name="email" placeholder="Email" data-rule="email" data-msg="Merci d'entrer une adresse valide" />-->
                    {{ form_row(formregister.pseudo, {'label' : false, 'attr' : {'class': 'form-control', 'placeholder' : 'Pseudonyme'}}) }}
                    <div class="validate"></div>
                </div>
                <div class="form-group col-md-4">
                    <!--<input type="email" class="form-control" name="email" placeholder="Email" data-rule="email" data-msg="Merci d'entrer une adresse valide" />-->
                    {{ form_row(formregister.mail, {'label' : false, 'attr' : {'class': 'form-control', 'placeholder' : 'Email'}}) }}
                    <div class="validate"></div>
                </div>

                <div class="form-group col-md-4">
                    <!--<input type="email" class="form-control" name="email" placeholder="Email" data-rule="email" data-msg="Merci d'entrer une adresse valide" />-->
                    {{ form_row(formregister.idDiscord, {'label' : false, 'attr' : {'class': 'form-control', 'placeholder' : 'Tag Discord (Nom#1234) (optionnel)'}}) }}
                    <div class="validate"></div>
                </div>

            </div>
            <div class="form-row">

                <div class="form-group col-md-4">
                    <!--<input type="email" class="form-control" name="email" placeholder="Email" data-rule="email" data-msg="Merci d'entrer une adresse valide" />-->
                    {{ form_row(formregister.password.first, {'label' : false, 'attr' : {'class': 'form-control', 'placeholder' : 'Mot de passe'}}) }}
                    <div class="validate"></div>
                </div>

                <div class="form-group col-md-4">
                    <!--<input type="email" class="form-control" name="email" placeholder="Email" data-rule="email" data-msg="Merci d'entrer une adresse valide" />-->
                    {{ form_row(formregister.password.second, {'label' : false, 'attr' : {'class': 'form-control', 'placeholder' : 'Vérifier votre mot de passe'}}) }}
                    <div class="validate"></div>
                </div>

                <div class="form-group col-md-4">
                    <!--<input type="email" class="form-control" name="email" placeholder="Email" data-rule="email" data-msg="Merci d'entrer une adresse valide" />-->
                    {{ form_row(formregister.villeMairie, {'label' : false, 'attr' : {'class': 'form-control', 'placeholder' : 'Votre mairie'}}) }}
                    <div class="validate"></div>
                </div>
            </div>

            <div class="text-center"><button type="submit" class="btn btn-primary">Créer un compte</button></div>
            {{ form_end(formregister) }}


        </div>
    </section> <!--End Contact Section-->

    <!-- ======= Footer ======= -->
    <footer id="footer">
        <div class="container">
            <div class="copyright">
                &copy; Copyright <strong>eMairie</strong>. All Rights Reserved
            </div>
        </div>
    </footer><!-- End  Footer -->

    <a href="#" class="back-to-top"><i class="fa fa-angle-up"></i></a>

    <!-- Vendor JS Files -->
    <script src="/assets/vendor/jquery/jquery.min.js"></script>
    <script src="/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/assets/vendor/jquery.easing/jquery.easing.min.js"></script>
    <script src="/assets/vendor/php-email-form/validate.js"></script>
    <script src="/assets/vendor/venobox/venobox.min.js"></script>
    <script src="/assets/vendor/owl.carousel/owl.carousel.min.js"></script>
    <script src="/assets/vendor/superfish/superfish.min.js"></script>
    <script src="/assets/vendor/hoverIntent/hoverIntent.js"></script>
    <script src="/assets/vendor/aos/aos.js"></script>

    <!-- Template Main JS File -->
    <script src="/assets/js/main.js"></script>
{% endblock %}
