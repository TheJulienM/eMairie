{% extends 'base.html.twig' %}

{% block body %}

{% include 'commun/navbar/navbar.html.twig' %}

<main id="main">

    <!-- ======= List Project ======= -->
    <!-- ======= Speakers Section ======= -->
    <section id="project-list" class="project-list">
        <div class="container" data-aos="zoom-out">
            <div class="section-header">
                .
            </div>
            <div class="section-header">
                <h2>Liste de projets</h2>
            </div>

            <div class="row">

                {% for projet in projets %}
                    <div class="col-md-4">
                        <div class="card card-blog speaker" data-aos="fade-up" data-aos-delay="100">
                            <div class="card-img">
                                <a href="{{ path('mairie_projet_detail', {'ville': mairie, 'projet_name': projet.titre}) }}">
                                {% if projet.image is not empty %}
                                        <img src="{{ asset('uploads/ImageProjet/' ~ projet.image) }}" alt="" class="img-fluid">
                                {% else %}
                                    <img src="/assets/img/default_project.png" alt="" class="img-fluid">
                                {% endif %}
                                </a>
                            </div>
                            <div class="card-body" style="word-wrap: break-word;">
                                <!-- temporairement le temps de comprendre pourquoi le tag est d√©gueulasse
                                <div class="card-category-box">
                                    <div class="card-category">
                                        <h6 class="category">Approuv√©</h6>
                                    </div>
                                </div>-->
                                <h3 class="card-title"><a href="{{ path('mairie_projet_detail', {'ville': mairie, 'projet_name': projet.titre}) }}">{{ projet.titre }}</a></h3>
                                <p class="card-description" >
                                    {{ projet.description }}
                                </p>
                            </div>
                            <div class="card-footer">
                                <div class="post-author">
                                    {% if projet.User is empty %}
                                        <a href="#">
                                            <span class="author">{{ projet.VilleMairie }}</span>
                                        </a>
                                    {% else %}
                                        <a href="#">
                                            <span class="author">{{ projet.User }}</span>
                                        </a>
                                    {% endif %}
                                </div>
                                <div class="post-date">
                                    <span class="ion-ios-clock-outline">{{ projet.NbLike }} üëçüèª</span>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}

            </div>
        </div>

    </section><!-- End Speakers Section -->

</main><!-- End #main -->

    <!-- ======= Footer ======= -->
    <footer id="footer">
        <div class="container">
            <div class="copyright">
                &copy; Copyright <strong>eMairie</strong>. All Rights Reserved
            </div>
        </div>
    </footer><!-- End  Footer -->

    <a href="#" class="back-to-top"><i class="fa fa-angle-up"></i></a>

    <!-- Vendor JS Files -->
    <script src="/assets/vendor/jquery/jquery.min.js"></script>
    <script src="/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/assets/vendor/jquery.easing/jquery.easing.min.js"></script>
    <script src="/assets/vendor/php-email-form/validate.js"></script>
    <script src="/assets/vendor/venobox/venobox.min.js"></script>
    <script src="/assets/vendor/owl.carousel/owl.carousel.min.js"></script>
    <script src="/assets/vendor/superfish/superfish.min.js"></script>
    <script src="/assets/vendor/hoverIntent/hoverIntent.js"></script>
    <script src="/assets/vendor/aos/aos.js"></script>

    <!-- Template Main JS File -->
    <script src="/assets/js/main.js"></script>


{% endblock %}
