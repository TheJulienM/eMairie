{% extends 'base.html.twig' %}

{% block body %}

    <!-- ======= Header ======= -->
    <header id="header">
        <div class="container">

            <div id="logo" class="pull-left">
                <!-- Uncomment below if you prefer to use a text logo -->
                <!-- <h1><a href="#intro">The<span>Event</span></a></h1>-->
                <a href="{{ path('accueil') }}" class="scrollto"><img src="/assets/img/emairie_logo.png" alt="" title=""></a>
            </div>

            <nav id="nav-menu-container">
                <ul class="nav-menu">
                    <li><a href="{{ path('accueil') }}">Retour</a></li>
                </ul>
            </nav><!-- #nav-menu-container -->
        </div>

    </header><!-- End Header -->

     <!--======= Intro Section =======-->
    <section id="contact" class="section-bg contact_login">

            <div class="container" data-aos="zoom-in">

                <div class="section-header"></div>
                <div class="section-header">
                    <h2 style="color: white;">Connexion mairie</h2>
                    <!--<p><a href="mairie_register.html">Pas encore enregistré ?</a></p>
                    <p><a href="#">Mot de passe oublié</a></p>-->
                </div>
		
			
				
					{{ form_start(formMairieLogin, {'attr' : {'class' : ''}}) }}
                        <div class="form-row">
                            <div class="form-group col-md-3"></div>
                            <div class="form-group col-md-3">
                                <!--<input type="email" class="form-control" name="email" placeholder="Email" data-rule="email" data-msg="Merci d'entrer une adresse valide" />-->
								{{ form_row(formMairieLogin.mail, {'label' : false, 'attr' : {'class': 'form-control', 'placeholder' : 'Email'}}) }}
                                <div class="validate"></div>
                            </div>
                            <div class="form-group col-md-3">
                                <!--<input type="password" class="form-control" name="subject" id="password" placeholder="Mot de passe" data-rule="minlen:4" data-msg="Merci d'entrer 4 caractères minimum" />-->
                                {{ form_row(formMairieLogin.password, {'label' : false, 'attr' : {'class': 'form-control', 'placeholder' : 'Mot de passe'}}) }}
								<div class="validate"></div>
                            </div>
                        </div>
                        <div class="text-center"><button type="submit"  class="btn btn-primary">Connexion</button></div>
                    {{ form_end(formMairieLogin) }}

            </div>
    </section> <!--End Contact Section-->

